page{
  height:100%;
}

/*主页背景*/
.container-box{
   overflow: hidden; width:  100%; position:  static; height:  100%;  background-size:  cover; background-repeat:  no-repeat;
   position:relative;   
}
/*第一页盒子*/
.oneBox{
  width:100%;
  height:100%;
}

/*音乐图标*/
.container-playMusic{
  width:60rpx;
  height:60rpx;
  position:absolute;
  z-index:99;
  right:36rpx;
  top:30rpx;
  animation:rotateMusic 2s linear infinite;
}
@keyframes rotateMusic{
  0%{
    transform:rotate(0deg);
  }
  50%{
    transform:rotate(180deg);
  }
  100%{
    transform:rotate(360deg);
  }
}
/* 箭头图标 */
.container-arrow{
  width:100rpx;
  height:80rpx;
  position:absolute;
  bottom:5rpx;
  opacity:0.5;
  animation:arrowImg 2s linear infinite;
}
@keyframes arrowImg{
  0%{
    opacity:0;
  }
  5%{
    opacity:0.5;
    transform:translateY(-10rpx);
  }
  50%{
    opacity:1;
    transform:translateY(-60rpx);
  }
  100%{
    transform:translateY(-80rpx);
  }
}

/*第一页头部*/
.timeHeart-oneTopBox{
  width:100%;
  height:600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.timeHeart-oneTopBox-img{
  width:370rpx;
  height:290rpx;
  animation:keyframes 0.5s linear forwards;
  animation:changeBiger 2s linear forwards;
  /* animation-delay:1.5s;  */
  
}

@keyframes keyframes{
  0%{
    opacity:0;
  }
  100%{
    opacity:1;
  }
}

 @keyframes changeBiger{
  0%{
    transform:scale(1);
    opacity:0;
  }
  100%{
    transform:scale(2);
    opacity:1;
  }
} 
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  /* margin: 20rpx; */
  /* border-radius: 50%; */
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.timeHeart-oneBottomBox{
  width:100%;
  height:616rpx;
  display: flex;
  /* flex-direction: column;
  align-items: center; */
  justify-content:center;
}

/*边框img*/
.timeHeart-oneBottomBox-frameImg{
  width:680rpx;
  height:580rpx;
  position:absolute;
  top:150rpx;
  animation:frameLate 2s linear forwards;
}
@keyframes frameLate{
  0%{
    transform:translateY(0rpx);
  }
  100%{
    transform:translateY(470rpx);
  }
}
/* 第一页文字部分 */
.timeHeart-oneBottomBox-TextImg{
  width:380rpx;
  position:absolute;
  top:-460rpx;
  animation:oneTextImg 2.5s ease forwards;
}
.timeHeart-oneBottomBoxT-TextImg{
  width:520rpx;
  position:absolute;
  top:-420rpx;
  animation:oneTextImg 2.5s ease forwards;
}
.timeHeart-oneBottomBoxFour-TextImg{
  width:560rpx;
  position:absolute;
  top:-440rpx;
  animation:oneTextImg 2.5s ease forwards;
}
.timeHeart-oneBottomBoxFive-TextImg{
  width:540rpx;
  position:absolute;
  top:-480rpx;
  animation:oneTextImg 2.5s ease forwards;
}
.timeHeart-oneBottomBoxSix-TextImg{
  width:360rpx;
  position:absolute;
  top:-460rpx;
  animation:oneTextImg 2.5s ease forwards;
}
@keyframes oneTextImg{
  0%{
    transform:translateY(0rpx);
  }
  40%{
    transform:translateY(1240rpx);
  }
  65%{
    transform:translateY(1100rpx);
  }
  80%{
    transform:translateY(1200rpx);
  }
  100%{
    transform:translateY(1150rpx);
  }
}


/* 更多页 */
.lastBlankBox{
  width:100%;
  height:910rpx;
}

.lastBtnBox{
  width:100%;  
  text-align:center;
}
 .moreBtnImg{
   width:320rpx;
  height:100rpx;
  margin:0 auto;
  margin-bottom:120rpx;
  line-height:100rpx;
  opacity:0.2;
  animation:btnShaking 2s linear forwards;
} 
@keyframes btnShaking{
  0%{
    opacity:0.2;
  }
  5%{
    opacity:0.5;
  }
  10%{
    transform:translate(-40rpx) rotate(-2deg);
    opacity:1;
  }
  20%{
    transform:translate(-80rpx) rotate(-4deg);
  }
  30%{
    transform:translate(0rpx) rotate(0deg);
  }
  40%{
     transform:translate(40rpx) rotate(2deg);
  }
  50%{
    transform:translate(80rpx) rotate(4deg);
  }
  60%{
    transform:translate(0rpx) rotate(0deg);
  }
  65%{
     transform:translate(-20rpx) rotate(-2deg);
  }
  70%{
    transform:translate(-40rpx) rotate(-4deg);
  }
  75%{
    transform:translate(0rpx) rotate(0deg);
  }
  80%{
     transform:translate(15rpx) rotate(2deg);
  }
  85%{
    transform:translate(30rpx) rotate(4deg);
  }
  100%{
    opacity:1;
    transform:translate(0rpx) rotate(0deg);
  }
}
